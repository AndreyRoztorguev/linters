{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "sourceMap": true,
      "declaration": false,
      "jsx": "react",
      "module": "ESNext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES2015",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2017", "dom"]
    },
    "include": ["./src/**/*", "./typings/**/*"],
    "exclude": ["node_modules", "@types"]
  }
  